        {
          "name": "Get Blogs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/v1/blogs",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "blogs"]
